<Page
    x:Class="HAMZA_PFE.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HAMZA_PFE.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Top" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Row="0"
            Grid.Column="0"
            Margin="10"
            Padding="20"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            CornerRadius="8">
            <StackPanel>
                <TextBlock
                    Text="System Status"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                <TextBlock
                    Margin="0,10,0,0"
                    Text="Your system is secure."
                    FontSize="14"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                <ProgressBar
                    Margin="0,10,0,0"
                    Value="75"
                    Maximum="100"
                    Height="10"
                    Foreground="{DynamicResource SystemAccentColorBrush}" />
                <TextBlock
                    Margin="0,5,0,0"
                    Text="75% Protected"
                    FontSize="12"
                    Foreground="{DynamicResource TextFillColorTertiaryBrush}" />
            </StackPanel>
        </Border>

        <Border
            Grid.Row="0"
            Grid.Column="1"
            Margin="10"
            Padding="20"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            CornerRadius="8">
            <StackPanel>
                <TextBlock
                    Text="Quick Actions"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                <ui:Button
                    Margin="0,10,0,0"
                    Content="Run Full Scan"
                    Icon="Fluent24"
                     />
                <ui:Button
                    Margin="0,10,0,0"
                    Content="Search for Updates"
                    Icon="Fluent24"
                    />
            </StackPanel>
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10"
            Padding="20"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            CornerRadius="8">
            <StackPanel>
                <TextBlock
                    Text="Threat Statistics"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock
                            Text="Total Threats Detected"
                            FontSize="14"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                        <TextBlock
                            Text="14"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="{DynamicResource SystemAccentColorBrush}" />
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock
                            Text="Last Scan"
                            FontSize="14"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                        <TextBlock
                            Text="2 hours ago"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="{DynamicResource SystemAccentColorBrush}" />
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock
                            Text="Files Scanned"
                            FontSize="14"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                        <TextBlock
                            Text="15"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="{DynamicResource SystemAccentColorBrush}" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <Border
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10"
            Padding="20"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            CornerRadius="8">
            <StackPanel>
                <TextBlock
                    Text="Recent Activity"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                <ListView Margin="0,10,0,0">
                    <ListViewItem>
                        <TextBlock Text="Threat 'Hamza' detected." />
                    </ListViewItem>
                    <ListViewItem>
                        <TextBlock Text="Virus." />
                    </ListViewItem>
                    <ListViewItem>
                        <TextBlock Text="Full system scan completed." />
                    </ListViewItem>
                </ListView>
            </StackPanel>
        </Border>
    </Grid>
</Page>
